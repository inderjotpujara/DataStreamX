# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
POSTGRES_USER=datastreamx
POSTGRES_PASSWORD=development
POSTGRES_DB=datastreamx
DATABASE_URL=postgresql://datastreamx:development@db:5432/datastreamx

# Kafka Configuration
KAFKA_BROKER=kafka:9092
KAFKA_CLIENT_ID=datastreamx-api
KAFKA_GROUP_ID=datastreamx-consumer-group

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=24h
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Optional Features
ENABLE_SWAGGER=true
ENABLE_METRICS=true